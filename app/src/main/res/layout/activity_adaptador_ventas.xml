<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/color_lista">

    <TextView
        android:id="@+id/textNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del producto: "
        android:textColor="@color/color_claro" />

    <TextView
        android:id="@+id/textCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad: "
        android:textColor="@color/color_claro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btRestar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/menos" />

        <TextView
            android:id="@+id/textCantidadValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/color_claro"
            android:textSize="18sp"
            android:layout_marginHorizontal="8dp" />

        <ImageView
            android:id="@+id/btSumar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/mas" />

    </LinearLayout>

    <TextView
        android:id="@+id/textPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio: "
        android:textColor="@color/color_claro" />

</LinearLayout>
