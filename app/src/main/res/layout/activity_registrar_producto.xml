<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/fondo_degradado"
    tools:context=".RegistrarProducto">

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE PRODUCTO"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_claro"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        />

    <LinearLayout
        android:id="@+id/linear01registro"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textView">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EAN"
        android:textSize="15dp"
        android:textColor="@color/color_claro" />

    <EditText
        android:id="@+id/edtEAN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/color_claro"
        android:inputType="number"
        android:padding="8dp"
        android:maxLength="13"
        android:layout_below="@id/textView4"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textColor="@color/color_claro"
        android:layout_below="@id/edtEAN"/>

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:padding="8dp"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/color_claro"
        android:layout_below="@id/textView3"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Marca"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_claro"
        />

    <EditText
        android:id="@+id/edtMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/color_claro"
        android:background="@drawable/rounded_corner" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ficha tecnica"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_claro" />

    <EditText
        android:id="@+id/edtFichaTecnica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:padding="8dp"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/color_claro" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stock Disponible"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_claro"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edtStockDisponible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:padding="8dp"
        android:textColor="@color/color_claro"
        android:background="@drawable/rounded_corner" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="47dp"
        android:layout_height="27dp"
        android:text="Precio"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_claro"
        android:textSize="15dp" />
    <EditText
        android:textColor="@color/color_claro"
        android:id="@+id/edtPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="8dp"
        android:inputType="numberDecimal"
        android:background="@drawable/rounded_corner"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de entrada"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_claro"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edtFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/color_claro"
        android:inputType="date"
        android:padding="8dp"
        android:background="@drawable/rounded_corner" />
    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
    android:layout_below="@+id/linear01registro">

    <Button
        android:id="@+id/btRegistrar"
        android:layout_width="124dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/boton_oscuro"
        android:text="Registrar"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/boton_naranja"
        android:text="Volver"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btCodigoBarras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo de barras"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="11dp" />

</LinearLayout>

</RelativeLayout>