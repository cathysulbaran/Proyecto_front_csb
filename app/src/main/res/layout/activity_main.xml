<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    android:gravity="center"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MI APLICACION"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="center">


    <Button
        android:id="@+id/btRegistro"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:textSize="15sp"
        android:backgroundTint="#93BDBF"
        android:text="Registrar Producto"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btEliminarModificar"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:backgroundTint="#93BDBF"
        android:textSize="15sp"
        android:text="Eliminar o modificar producto"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/btConsulta"
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:backgroundTint="#93BDBF"
        android:textSize="15sp"
        android:text="Consulta Articulo"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btRegistroUsuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesion"
        android:textColor="@color/black"
        android:backgroundTint="@color/boton_naranja"
        />

    <Button
        android:id="@+id/btGenerarInforme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generador de informes" />

</LinearLayout>